<div class="flex">
  <div class="rounded-lg shadow-lg bg-transparent max-w-md">
    <article class="recipe">
      <a href="/recipe/{{id}}">
       <div class="image-container" style="height:400px; width:400px;"> <img src="{{image}}" alt="food" class="object-cover" /> </div> 

        <div class="text-gray-900 leading-tight m-2">
          <h1 class="text-2xl font-bold hover:underline text-black">{{title}}</h1>
          <div class="italic">
            {{summary}}
          </div>
        </div>
      </a>
    </article>
  </div>
</div>