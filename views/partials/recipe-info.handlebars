<article class="recipe">
  <a href="/recipe/{{id}}">
  <img src="{{image}}" alt="food">
    <div class="title">
      <h1 class="text-2xl font-bold">{{title}}</h1>
      <p>{{summary}}</p>
    </div>
    <div class="meta">
      by {{user.username}} on {{format_date created_at}}
    </div>
    
    <p>{{recipe_instructions}}</p>
  </a>
</article>